<%- include('../partials/user-header') %>
<main class="main">
  <div class="page-header breadcrumb-wrap">
    <div class="container">
      <div class="breadcrumb">
        <a href="/" rel="nofollow">Home</a>
        <span></span> Your Cart
      </div>
    </div>
  </div>
  <% if (emptyCart===0) {%>
  <div class="col-12 text-center my-5">
    <h3 class="">Your cart is empty!ðŸ¥²</h3>
    <p class="mb-4 mt-2">Add items to it now.</p>
    <a class="btn" href="/"
      ><i class="fi-rs-shopping-bag mr-10"></i>Return Home</a
    >
  </div>
  <%} else {%>
  <section class="mt-50 mb-50">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="table-responsive">
            <table class="table shopping-summery text-center clean">
              <thead>
                <tr class="main-heading">
                  <th scope="col">Image</th>
                  <th scope="col">Name</th>
                  <th scope="col">Price</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">Subtotal</th>
                  <th scope="col">Remove</th>
                </tr>
              </thead>
              <tbody>
                <%cartItems.forEach(products => {%>
                <tr id="<%= products.Product._id %>-tr">
                  <td class="image">
                    <a
                      href="/profile-product-view?id=<%-products.Product._id%>"
                    >
                      <img
                        src="/product-images/<%-products.Product._id %>0.png"
                        alt="#"
                      />
                    </a>
                  </td>

                  <td class="product-des">
                    <h5 class="product-name">
                      <a
                        href="/profile-product-view?id=<%-products.Product._id%>"
                        ><%- products.Product.name %></a
                      >
                    </h5>
                    <p class="font-xs"><%-products.Product.description%></p>
                  </td>
                  <td class="price" data-title="Price">
                    <span id="price"> â‚¹<%=products.Product.price %></span>
                  </td>
                  <td class="text-center" data-title="Stock">
                    <!-- QUANTITY -->

                    <div class="detail-qty border radius m-auto">
                      <a
                        href="#"
                        class="qty-down"
                        onclick="changeQuantity('<%-products._id%>','<%- products.Product._id %>',-1,this.parentElement.querySelector('input'))"
                        ><i class="fi-rs-angle-small-down"></i
                      ></a>
                      <input
                        class="product-quantity"
                        id="proId"
                        style="border: none"
                        value="<%=products.quantity %>"
                      />

                      <a
                        href="#"
                        class="qty-up"
                        onclick="changeQuantity('<%-products._id%>','<%- products.Product._id %>',1,this.parentElement.querySelector('input'))"
                        ><i class="fi-rs-angle-small-up"></i
                      ></a>
                    </div>

                    <!-- QUANTITY -->
                  </td>
                  <td class="text-right" data-title="Cart">
                    <span id="subtotal">
                      â‚¹<%=products.quantity*products.Product.price %>
                    </span>
                  </td>
                  <td class="action" data-title="Remove">
                    <a
                      onclick="deleteProductFromCart('<%= products.Product._id %>','<%-products._id%>')"
                      class="text-muted"
                      ><i class="fi-rs-trash"></i
                    ></a>
                  </td>
                </tr>

                <%}); %>

                <tr>
                  <!-- <td colspan="6" class="text-end">
                    <a href="#" class="text-muted">
                      <i class="fi-rs-cross-small"></i> Clear Cart</a
                    >
                  </td> -->
                </tr>
              </tbody>
            </table>
          </div>
          <div class="cart-action text-end">
            <table class="table">
              <tbody>
                <tr>
                  <td class="cart_total_label">Total</td>
                  <td class="cart_total_amount">
                    <strong
                      ><span class="font-xl fw-900 text-brand" id="total">
                        â‚¹<%= totalAmount%>
                      </span></strong
                    >
                  </td>
                </tr>
              </tbody>
            </table>
            <a class="btn" href="/"
              ><i class="fi-rs-shopping-bag mr-10"></i>Continue Shopping</a
            >
            <a href="/checkout" class="btn">
              <i class="fi-rs-box-alt mr-10"></i> Proceed To CheckOut</a
            >
          </div>
          <div class="divider center_icon mt-50 mb-50">
            <i class="fi-rs-fingerprint"></i>
          </div>
        </div>
      </div>
    </div>
  </section>
  <%} %>
</main>

<script>
  function changeQuantity(cartId, proId, count, input) {
    let quantity = parseInt(document.getElementById("proId").innerHTML);
    const price = parseInt(document.getElementById("price").innerHTML);
    count = parseInt(count);
    $.ajax({
      url: "/change-product-quantity",
      data: {
        cart: cartId,
        product: proId,
        count: count,
        quantity: quantity,
      },
      method: "post",
      beforeSend: () => {
        if (count == -1 && input.value == 1) {
          deleteProductFromCart2(proId, cartId, input);
        }
      },
      success: (response) => {
        console.log(response);
        if (response.removeProduct) {
          alert("product removed from cart");
          location.reload();
        } else {
          let qty = input.value;
          if (count > 0) {
            qty = parseInt(qty) + 1;
            input.value = qty;
          } else if (count == 0) {
            qty = parseInt(qty);
            input.value = qty;
          } else {
            qty = parseInt(qty) - 1;
            input.value = qty;
          }

          document.getElementById("total").innerHTML = "â‚¹" + response.total;
          input.parentElement.parentElement.parentElement.querySelector(
            "#subtotal"
          ).innerText = "â‚¹" + response.productPrice.price * qty;
        }
      },
    });
  }

  function deleteProductFromCart(proId, cartId) {
    swal
      .fire({
        title: "Remove Product",
        text: "Are you sure you want to delete this product?",
        type: "warning",
        inputType: "submit",
        showCancelButton: true,
        closeOnConfirm: true,
      })
      .then((result) => {
        if (result.isConfirmed) {
          $.ajax({
            url: "/delete-product",
            method: "post",
            data: {
              product: proId,
              cart: cartId,
            },

            success: (response) => {
              if (response.cartItemsCount === 1) {
                window.location.reload();
              } else {
                if (response.productRemoved) {
                  Swal.fire({
                    title: "Removed",
                    timer: 700,
                    showConfirmButton: false,
                  });
                  const ProRow = document.getElementById(proId + "-tr");
                  $(ProRow).remove();
                  document.getElementById("total").innerHTML = response.total;
                }
              }
            },
          });
        } else {
        }
      })
      .catch((err) => {
        console.log(err);
      });
  }
  function deleteProductFromCart2(proId, cartId, input) {
    swal
      .fire({
        title: "Remove Product",
        text: "Are you sure you want to delete this product?",
        type: "warning",
        inputType: "submit",
        showCancelButton: true,
        closeOnConfirm: true,
      })
      .then((result) => {
        if (result.isConfirmed) {
          $.ajax({
            url: "/delete-product",
            method: "post",
            data: {
              product: proId,
              cart: cartId,
            },

            success: (response) => {
              if (response.cartItemsCount === 1) {
                window.location.reload();
              } else {
                if (response.productRemoved) {
                  Swal.fire({
                    title: "Removed",
                    timer: 700,
                    showConfirmButton: false,
                  });
                  const ProRow = document.getElementById(proId + "-tr");
                  $(ProRow).remove();
                  document.getElementById("total").innerHTML = response.total;
                }
              }
            },
          });
        } else {
          input.value = 1;
        }
      })
      .catch((err) => {
        console.log(err);
      });
  }
</script>

<%- include('../partials/user-footer') %>
