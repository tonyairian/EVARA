


<%- include('../partials/admin-header') %>

<section class="content-main">
  <div class="content-header">
    <div class="col-6">
      <h2 class="content-title card-title">Orders</h2>
      <p>View and manage recent orders</p>
    </div>
    <div class="col-6 text-end">
      <a href="/admin/sales-report/new" class="btn btn-primary"><i class="text-muted material-icons md-post_add"></i>Export</a>
    </div>
  </div>
  <div class="card mb-4">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover" id="ordersTable">
          <thead>
            <tr>
              <th scope="col">Deliver to:</th>
              <th>#ID</th>
              <th scope="col">Items</th>
              <th scope="col">Total</th>
              <th scope="col">Payment method</th>
              <th scope="col">Order Status</th>
              <th scope="col">Date</th>
              <th scope="col" class="text-end"> Action </th>
            </tr>
          </thead>
          <tbody>
            <% let i=0 %> 
           <%orderDetails.forEach(element => {%>
            
          
            <tr>
              <td><a href=""><b><%=element.deliveryDetails[0].name %></b></a></td>
              <td><%=element._id %> </td>
              <td><%=element.products.length %> </td>
              <td><%=element.deliveryDetails[0].total %></td>
              <td><%=orderDetails[i].paymentMethod %> </td>
              <td>
                <span class="badge rounded-pill alert-success"><%=element.status %> </span>
                
              </td>
              <td><%=element.deliveryDetails[0].date %></td>
              <td class="text-end">
                <a href="/admin/single-order?id=<%=element._id %> " class="btn btn-xs rounded font-sm">View order</a>
              </td>
            </tr>
            <%i++ }); %> 
          
          </tbody>
        </table>
      </div> <!-- table-responsive //end -->
    </div> <!-- card-body end// -->
  </div> <!-- card end// -->
</section>
<%- include('../partials/admin-footer') %>